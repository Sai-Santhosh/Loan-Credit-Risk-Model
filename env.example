# =============================================================================
# Credit Risk Prediction - Environment Variables Template
# Rename this file to .env and fill in your actual values
# =============================================================================

# ========================= AWS Configuration =========================
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=123456789012

# S3 Configuration
S3_BUCKET_NAME=credit-risk-ml-pipeline
S3_RAW_DATA_PREFIX=data/raw/
S3_PROCESSED_DATA_PREFIX=data/processed/
S3_ARTIFACTS_PREFIX=artifacts/
S3_MODEL_PREFIX=models/

# Redshift Configuration
REDSHIFT_HOST=your-cluster.region.redshift.amazonaws.com
REDSHIFT_PORT=5439
REDSHIFT_DATABASE=credit_risk_db
REDSHIFT_USER=admin
REDSHIFT_PASSWORD=your_secure_password
REDSHIFT_SCHEMA=ml_pipeline

# SageMaker Configuration
SAGEMAKER_ROLE_ARN=arn:aws:iam::123456789012:role/SageMakerExecutionRole
SAGEMAKER_INSTANCE_TYPE=ml.m5.xlarge
SAGEMAKER_TRAINING_INSTANCE_TYPE=ml.p3.2xlarge

# Glue Configuration
GLUE_DATABASE=credit_risk_catalog
GLUE_CRAWLER_ROLE=arn:aws:iam::123456789012:role/GlueCrawlerRole
GLUE_JOB_ROLE=arn:aws:iam::123456789012:role/GlueJobRole

# Lambda Configuration
LAMBDA_ROLE_ARN=arn:aws:iam::123456789012:role/LambdaExecutionRole

# Athena Configuration
ATHENA_OUTPUT_LOCATION=s3://credit-risk-ml-pipeline/athena-results/
ATHENA_WORKGROUP=primary

# ========================= MLflow / DagsHub =========================
MLFLOW_TRACKING_URI=https://dagshub.com/your-username/credit-risk.mlflow
DAGSHUB_USER_TOKEN=your_dagshub_token
DAGSHUB_REPO_OWNER=your-username
DAGSHUB_REPO_NAME=credit-risk

# MLflow Experiment Settings
MLFLOW_EXPERIMENT_NAME=credit-risk-prediction
MLFLOW_ARTIFACT_ROOT=s3://credit-risk-ml-pipeline/mlflow-artifacts/

# ========================= Database Configuration =========================
DATABASE_URL=postgresql://user:password@localhost:5432/credit_risk_db

# ========================= Application Configuration =========================
APP_ENV=development
LOG_LEVEL=INFO
DEBUG=True

# Model Configuration
MODEL_VERSION=1.0.0
MODEL_NAME=credit_risk_lgbm
DEFAULT_THRESHOLD=0.5

# Feature Store
FEATURE_STORE_OFFLINE_TABLE=credit_risk_features
FEATURE_STORE_ONLINE_TABLE=credit_risk_features_online

# ========================= API Configuration =========================
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=True

# ========================= Monitoring =========================
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# ========================= Secrets (Never commit actual values) =========================
JWT_SECRET_KEY=your_jwt_secret_key
API_KEY=your_api_key
